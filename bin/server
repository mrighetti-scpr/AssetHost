#!/usr/bin/env ruby

`rm -rf #{Dir.pwd}/tmp/pids/**`

commands = []

commands << "cd #{Dir.pwd}/frontend/ && ember s" if ENV["RAILS_ENV"] == "development"
commands << "caddy" if ENV["RAILS_ENV"] == "production"
commands << "rails s -b 0.0.0.0"

p_threads = commands.map do |command|
  Process.detach(Process.spawn(command))
end
p_threads.each(&:join)

